<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="practiceDayHeaderTotals">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="practiceDayCellHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#ccc</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="practiceDayHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="practiceCellContentStyle">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#00c</item>
        <item name="android:padding">4dp</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="practiceSessionTitleBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

</resources>