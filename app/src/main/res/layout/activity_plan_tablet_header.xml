<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="1px"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:collapseColumns="0,12,13">
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:gravity="center"

        >
        <Button
            android:id="@+id/dummy1"
            android:textColor="#fff"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_gravity= "center"
            android:gravity= "left"
            />

        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:layout_weight="3" >
            <TextView android:text=" Piece "
                android:background="#fff"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"  />
        </LinearLayout>

        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:layout_weight="1" >
            <TextView android:text="Dur."
                android:background="#fff"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout style="@style/planDayCellHeader" android:id="@+id/day0" >
            <TextView android:text="Sun" style="@style/planDayHeader" />
            <TextView android:id="@+id/dayTotal0" android:text="00:00"  style="@style/planDayTotalsHeader" />
        </LinearLayout>
        <LinearLayout style="@style/planDayCellHeader" android:id="@+id/day1">
            <TextView android:text="Mon" style="@style/planDayHeader" />
            <TextView android:id="@+id/dayTotal1" android:text="00:00" style="@style/planDayTotalsHeader" />
        </LinearLayout>
        <LinearLayout style="@style/planDayCellHeader"  android:id="@+id/day2">
            <TextView android:text="Tue" style="@style/planDayHeader" />
            <TextView android:id="@+id/dayTotal2" android:text="00:00" style="@style/planDayTotalsHeader" />
        </LinearLayout>
        <LinearLayout style="@style/planDayCellHeader" android:id="@+id/day3">
            <TextView android:text="Wed" style="@style/planDayHeader" />
            <TextView android:id="@+id/dayTotal3" android:text="00:00" style="@style/planDayTotalsHeader" />
        </LinearLayout>
        <LinearLayout style="@style/planDayCellHeader" android:id="@+id/day4">
            <TextView android:text="Thu" style="@style/planDayHeader" />
            <TextView android:id="@+id/dayTotal4" android:text="00:00" style="@style/planDayTotalsHeader" />
        </LinearLayout>
        <LinearLayout style="@style/planDayCellHeader" android:id="@+id/day5">
            <TextView android:text="Fri" style="@style/planDayHeader" />
            <TextView android:id="@+id/dayTotal5" android:text="00:00" style="@style/planDayTotalsHeader" />
        </LinearLayout>
        <LinearLayout style="@style/planDayCellHeader" android:id="@+id/day6">
            <TextView android:text="Sat" style="@style/planDayHeader" />
            <TextView android:id="@+id/dayTotal6" android:text="00:00" style="@style/planDayTotalsHeader" />
        </LinearLayout>

    </TableRow>
</TableLayout>