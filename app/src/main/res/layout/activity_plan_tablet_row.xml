<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="1dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="3"
        android:background="#fff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/priority"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="15"
            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#fff"
        android:gravity="center"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"        >

        <TextView
            android:id="@+id/piece"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textColor="#000"
            android:layout_margin="2dp"
            android:background="@android:color/transparent"
            android:gravity="top|left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Choose piece ..." />
            <TextView
                android:id="@+id/composer"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textColor="#000"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:gravity="top|left"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Composer" />
        <TextView
            android:id="@+id/goal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@android:color/transparent"
            android:gravity="top|left"
            android:textColor="#f00"
            android:layout_margin="2dp"
            android:textStyle="italic"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Set goal ..." />
    </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/minutes"
        style="@style/planCellContentStyle"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="00:15" />

    <LinearLayout style="@style/CheckBoxCellWrapper">
        <CheckBox android:id="@+id/box0" style="@style/CheckBoxCell" />
    </LinearLayout>

    <LinearLayout style="@style/CheckBoxCellWrapper">
        <CheckBox android:id="@+id/box1" style="@style/CheckBoxCell" />
    </LinearLayout>

    <LinearLayout style="@style/CheckBoxCellWrapper">
        <CheckBox android:id="@+id/box2" style="@style/CheckBoxCell" />
    </LinearLayout>
    <LinearLayout style="@style/CheckBoxCellWrapper">
        <CheckBox android:id="@+id/box3" style="@style/CheckBoxCell" />
    </LinearLayout>
    <LinearLayout style="@style/CheckBoxCellWrapper">
        <CheckBox android:id="@+id/box4" style="@style/CheckBoxCell" />
    </LinearLayout>
    <LinearLayout style="@style/CheckBoxCellWrapper">
        <CheckBox android:id="@+id/box5" style="@style/CheckBoxCell" />
    </LinearLayout>
    <LinearLayout style="@style/CheckBoxCellWrapper">
        <CheckBox android:id="@+id/box6" style="@style/CheckBoxCell" />
    </LinearLayout>

</TableRow>